@keyframes elasticity
  0%
    transform: scale(.5)
  70%
    transform: scale(1.08)
  100%
    transform: scale(1)
@keyframes bgopacity
  0%
    background-color: rgba(0,0,0,0)
  100%
    background-color: rgba(0,0,0,.4)
@keyframes bgleave
  0%
    background-color: rgba(0,0,0,0.4)
  100%
    background-color: rgba(0,0,0,0)
@keyframes boxleave
  0%
    transform: scale(1)
  30%
    transform: scale(1.08)
  100%
    transform: scale(0)
.enter
  .modal-mask
    animation: bgopacity 300ms cubic-bezier(.24,.61,.48,.95)
  .modal-content
    animation: elasticity 300ms cubic-bezier(.24,.61,.48,.95)
.leave
  .modal-mask
    background-color: rgba(0,0,0,0)
    animation: bgleave 300ms cubic-bezier(.57,.09,.37,.9)
  .modal-content
    animation: boxleave 300ms cubic-bezier(.57,.09,.37,.9)
.modal-mask
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0
  z-index: 999
  background-color: rgba(0,0,0,.4)
  animation-fill-mode: forwards
.modal-wrap
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0
  z-index: 999
  display: flex
  justify-content: center
  align-items: center
  .modal-content
    animation-fill-mode: forwards
    display: flex
    flex-direction: column
    background:#FFF
    width: 540px
    border-radius: 20px
    .header
      height: 100px
      background: url('@/imgs/bg_sq_tc@2x.png') top left / 100% auto no-repeat
    .text-content
      color: #666666
      min-height: 100px
      display: flex
      align-items: center
      justify-content: center
      margin: 30px
      p
        margin: 0
        padding: 0
        font-size: 28px
        line-height: 48px
        font-family: PingFangSC-Regular
    .footer
      display: flex
      height: 96px
      line-height: 96px
      span
        font-size: 28px
        font-family: PingFangSC-Regular
        flex: 1
        text-align: center
        border-top: 1PX solid rgba(0, 0, 0, .1)
        border-right: 1PX solid rgba(0, 0, 0, .1)
        &:last-child
          border-right: none
      .cancel
        color: #999999
      .confirm
        color: #E83C25
