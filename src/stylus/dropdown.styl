@keyframes customSlideDownIn
  from
    opacity: 0
    transform-origin: 0% 0%;
    transform: scaleY(.8)
  to
    opacity: 1
    transform-origin: 10% 10%;
    transform: scaleY(1)
@keyframes customSlideDownOut
  from
    opacity: 1
    transform-origin: 0% 0%;
    transform: scaleY(1)
  to
    opacity: 0
    transform-origin: 10% 10%;
    transform: scaleY(.8)
.container
  .hidden
    display: none
  .results
    width: 200px
    height: 300px
    outline: none;
    /* position: relative; */
    /* list-style-type: none; */
    padding: 0;
    margin: 0;
    text-align: left;
    background-color: #fff;
    border-radius: 4px;
    box-shadow: 0 1px 6px rgba(0,0,0,.2);
    background-clip: padding-box;
    transition: all 300ms
    ul
      li
        padding: 5px 10px
        cursor: pointer
        transition: all 300ms;
        &:hover
          background-color: #ecf6fd;
  .custom-slide-up-enter
    animation-duration: 300ms
    animation-name: customSlideDownIn
    animation-timing-function: cubic-bezier(.23,1,.32,1);
    animation-fill-mode: both;
  .custom-slide-up-leave
    animation-duration: 300ms
    animation-name: customSlideDownOut
    animation-timing-function: cubic-bezier(.23,1,.32,1);
    animation-fill-mode: both;
  :global
    .costom-btn-group
      width: 100px
      overflow: hidden
      height: 30px
      line-height: 28px
      box-sizing: border-box;
      display: flex
      cursor: pointer
      user-select: none
      .btn-left
        float: left
        flex: 1
        text-align: center
        border: 1px solid rgb(217, 217, 217)
        box-sizing: border-box;
        line-height: 28px
        border-radius: 4px 0px 0px 4px / 4px 0px 0px 4px
        background-color: white
        &:hover
          z-index: 2
          border: 1px solid #108ee9;
      .btn-right
        background-color: white
        width: 30px
        float: right
        text-align: center
        margin-left: -1px;
        line-height: 28px
        border: 1px solid rgb(217, 217, 217)
        border-radius: 0px 4px 4px 0px / 0px 4px 4px 0px
        &:hover
          z-index: 2
          border: 1px solid #108ee9;
