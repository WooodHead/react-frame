.container
  :global
    .costom-btn-group
      width: 100px
      overflow: hidden
      height: 30px
      line-height: 28px
      box-sizing: border-box;
      display: flex
      cursor: pointer
      user-select: none
      .btn-left
        float: left
        flex: 1
        text-align: center
        border: 1px solid rgb(217, 217, 217)
        box-sizing: border-box;
        line-height: 28px
        border-radius: 4px 0px 0px 4px / 4px 0px 0px 4px
        &:hover
          z-index: 2
          border: 1px solid #108ee9;
      .btn-right
        width: 30px
        float: right
        text-align: center
        margin-left: -1px;
        line-height: 28px
        border: 1px solid rgb(217, 217, 217)
        border-radius: 0px 4px 4px 0px / 0px 4px 4px 0px
        &:hover
          z-index: 2
          border: 1px solid #108ee9;
