@import './antd'
html, body
  height: 100%
body
  overflow: auto!important
  -webkit-overflow-scrolling: touch
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0
  background-color: #f5f5f5
  overflow: scroll
:global
  #root
    width: 100%
    height: 100%
    overflow: hidden
    position: absolute
    .app
      width: 100%
      height: 100%
      .layout
        width: 100%
        height: 100%
        display: flex
        flex-direction: column
      .scroll-wrap
        flex: 1
        overflow: scroll
  p,h1,h2,h3,h4,h5,h6
    margin: 0
    padding: 0
  .mt-2
    margin-top: 2px
  .mt-32
    margin-top: 32px
  .mb-18
    margin-bottom: 18px
  .ml-24
    margin-left: 24px
  .bg-white
    background: #FFFFFF
  .fixed
    position: fixed
    z-index: 999
    top: 0
    .abs
      position: absolute
      top: 80px
