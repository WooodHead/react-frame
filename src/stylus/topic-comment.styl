.comment-area
  .title-bar
    margin: 40px 0px 20px 32px
    span
      font-family: PingFangSC-Regular;
      font-size: 24px;
      color: #666666;
      letter-spacing: 0.1px;
      display: inline-block
      height: 34px
      line-height: 34px
      display: flex
      align-items: center
      &:before
        content: ''
        display: inline-block
        background: #008DFF
        width: 12px
        height: 12px
        margin-right: 20px
  .topic-comment-item
    background: #FFFFFF
    display: flex
    flex-direction: row
    padding: 42px 0 40px
    margin: 0 32px
    border-bottom: 2px solid rgba(0, 0, 0, .1)
    .avatar
      img
        width: 72px
        height: 72px
        border-radius: 50%
    .topic-comment-item-right
      margin-left: 16px
      flex: 1
      .right-first-fl
        display: flex
        .first-fl-left
          .nickname
            margin-top: 8px;
            font-family: PingFangSC-Regular;
            font-size: 28px;
            color: #666666;
            letter-spacing: -0.17px;
            line-height: 32px;
          .first-fl-left-second-fl
            span
              font-family: PingFangSC-Regular;
              font-size: 20px;
              color: #999999;
              letter-spacing: -0.12px;
              line-height: 24px;
              .separate
                padding: 0 8px
        .first-fl-right
          flex: 1
          display: flex
          justify-content: flex-end
      .topic-comment-item-content
        margin-top: 24px;
        font-family: PingFangSC-Regular;
        font-size: 32px;
        color: #222222;
        letter-spacing: -0.21px;
        line-height: 48px;
