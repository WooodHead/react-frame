.container
  position: absolute
  top: 0
  bottom: 0
  width: 100%
  background-color: #303740
  .radial
    position: absolute
    top: 50%
    left: 50%
    width: 640px
    height: 640px
    margin: -320px 0 0 -320px
    background: -webkit-gradient(radial,50% 50%,0,50% 50%,320,from(#6a6f76),to(rgba(48,55,64,0)))
  .erv
    position: absolute
    width: 120px
    height: 120px
    background: url('@/imgs/code_icon.jpg') 0 0 / 120px 120px no-repeat
    right: 40px
    bottom: 40px
  .loginForm
    position: absolute
    transform: translateY(-50%)
    width: 300px
    top: 50%
    left: 0
    right: 0
    margin: auto auto
    input, button
      height: 40px
    i
      color: black
    span, a
      color: white
    .icon
      height: 94px
      background: url('@/imgs/login_logo.png') top center no-repeat
    :global
      .anticon
        font-size: 15px
      .ant-btn-primary
        margin-bottom: 5px
        background-color: #ec971f
        border-color: #d58512
      .ant-btn-primary:hover
          background-color: #eb9316
          background-position: 0 -15px
