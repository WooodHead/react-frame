.topic-container
  margin: 0 20px
  :global
    .topic-container-tabs-bar
      .am-tabs-bar
        height: 100px
        border: none
        margin-bottom: 18px
        background-color: #FFFFFF
        &:before
          content: ''
          display: block
          width: 100%
          height: 4px
          position: absolute
          background: #f5f5f5
          top: 76px
        .am-tabs-ink-bar
          bottom: 20px
          background-image: linear-gradient(-135deg, #8769FF 0%, #008DFF 100%)
        .am-tabs-tab
          font-family: PingFangSC-Regular
          font-size: 26px
          color: #999999
          letter-spacing: -0.16px
          height: 80px
          line-height: 76px
          margin: 0 40px
          white-space: nowrap
          border: none
        .am-tabs-tab-active
          font-family: PingFangSC-Regular
          font-size: 26px
          color: #222222;
          letter-spacing: -0.16px
