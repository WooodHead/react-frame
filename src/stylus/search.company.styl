.container
  :global
    .i-remove
      cursor: pointer;
      position: absolute;
      top: 9px;
      right: 14px;
      width: 12px;
      height: 12px;
      background: url('../imgs/icon_close.png') no-repeat;
      z-index: 1
      &:hover
        background: url('../imgs/icon_close_orange.png') no-repeat;
    .i-search
      position: absolute;
      top: 7px;
      left: 10px;
      width: 14px;
      height: 16px;
      background: url('../imgs/icon_search.png') no-repeat;
    .form-control
      margin: 0;
      padding: 0;
      height: 30px
      .ant-select
        width: 280px;
        position: absolute;
        padding: 0 29px 0 29px
        .ant-select-selection
          height: 28px
          ul
            margin: 0
            input
              border: none
              outline: none
              &:hover
                outline: none
                border-color: none
                border: none
              &:focus
                box-shadow: none;
