@keyframes move
  0%
    transform: translateX(-50%)
  100%
    transform: translateX(0%)
.container
  height: 294px
  background-image: linear-gradient(-180deg, #006ADB 0%, #008DFF 100%)
  position: relative
  overflow: hidden
  .btn
    position: absolute
    top: 46px
    margin: 0 auto
    left: 0
    right: 0
    width: 300px
    height: 72px
    opacity: .7
    border: 1px solid rgb(255,255,255)
    border-radius: 100px
    display: flex
    align-items: center
    justify-content: center
    span
      font-family: PingFangSC-Medium;
      font-size: 28px;
      color: #FFFFFF;
      letter-spacing: 0.12px;
  .movement
    height: 90px
    position: absolute
    bottom: 0
    width: 100%
    &:after
      content: ''
      display: block
      width: 100%
      height: 50px
      background: #FFFFFF
      position: absolute
      bottom: 0
    div
      height: 40px
      width: 1500px
      position: absolute
      top: 0
      left: 0
      right: 0
      bottom: 50px
      &:nth-child(1)
        background: url('@/imgs/bl_top@2x.png') repeat-x
        animation: move 8s linear infinite
      &:nth-child(2)
        background: url('@/imgs/bl_under@2x.png') repeat-x
        animation: move 4s linear infinite
